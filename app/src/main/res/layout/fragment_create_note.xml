<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/myBackgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".presentation.ui.fragment.create.CreateNoteFragment">

    <include layout="@layout/input_block" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="?attr/myPrimaryColor"
        android:clickable="true"
        android:elevation="6dp"
        android:focusable="true"
        android:src="@drawable/ic_check_black_24dp"
        app:borderWidth="0dp"
        app:fabSize="auto"
        app:rippleColor="?attr/mySrcTint"
        app:tint="?attr/mySrcTint" />


</FrameLayout>